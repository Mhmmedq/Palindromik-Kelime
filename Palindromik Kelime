public class Main {
    static boolean isploindrom(String str){
        int i=0;
        int j=str.length()-1;
        while (i<j){
            if (str.charAt(i)==str.charAt(j)){
                return true;
            }
            i++;
            j--;
        }
        return false;
    }
    public static void main(String[] args) {
        if (isploindrom("assa")){
            System.out.println("polindrom kalimedir");
        }else System.out.println("polindrom kalime degildir");
    }
}
